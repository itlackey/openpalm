{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": [
      "bun"
    ],
    "baseUrl": ".",
    "paths": {
      "@openpalm/lib/*": [
        "packages/lib/src/*"
      ],
      "@openpalm/lib/admin/*": [
        "packages/lib/src/admin/*"
      ],
      "@openpalm/lib/assets/*": [
        "packages/lib/assets/*"
      ]
    }
  },
  "include": [
    "core/gateway/src/**/*.ts",
    "channels/**/*.ts",
    "packages/cli/src/**/*.ts",
    "packages/lib/src/**/*.ts",
    "test/**/*.ts",
    "packages/lib/assets/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/ui"
  ]
}
