{
  "name": "openpalm",
  "version": "0.5.11",
  "private": true,
  "workspaces": [
    "core/admin",
    "packages/lib",
    "core/guardian",
    "channels/chat",
    "channels/api",
    "channels/discord",
    "channels/base"
  ],
  "scripts": {
    "admin:dev": "bun run --cwd core/admin dev",
    "admin:build": "bun run --cwd core/admin build",
    "admin:check": "bun run --cwd core/admin check",
    "admin:test": "cd core/admin && npm test",
    "admin:test:unit": "cd core/admin && npm run test:unit -- --run",
    "admin:test:e2e": "cd core/admin && npm run test:e2e",
    "guardian:dev": "bun run core/guardian/src/server.ts",
    "guardian:test": "bun test --cwd core/guardian",
    "lib:test": "bun test --cwd packages/lib",
    "channel:chat:dev": "bun run channels/chat/server.ts",
    "channel:api:dev": "bun run channels/api/server.ts",
    "channel:discord:dev": "bun run channels/discord/server.ts",
    "dev:setup": "./scripts/dev-setup.sh --seed-env",
    "dev:stack": "docker compose -f .dev/state/artifacts/docker-compose.yml --env-file .dev/state/artifacts/stack.env --env-file .dev/state/artifacts/secrets.env up -d",
    "test": "bun test packages/ channels/ core/guardian/",
    "check": "bun run admin:check && bun run lib:test"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18"
  }
}
