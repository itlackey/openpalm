{
  "name": "openpalm",
  "version": "0.4.0",
  "private": true,
  "workspaces": [
    "core/gateway",
    "core/admin",
    "channels/chat",
    "packages/lib",
    "packages/cli",
    "packages/ui"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath dev/hooks",
    "test": "bun test",
    "typecheck": "bunx tsc",
    "preflight": "bun run packages/cli/src/main.ts dev preflight",
    "dev:setup": "./dev/dev-setup.sh",
    "dev:setup:clean": "./dev/dev-setup.sh --clean",
    "dev:compose": "docker compose --project-directory . --env-file .env -f packages/lib/src/embedded/state/docker-compose.yml -f dev/docker-compose.dev.yml",
    "dev:up": "bun run dev:down && bun run preflight && bun run dev:compose -- up -d && bun run dev:configure",
    "dev:build": "bun run dev:down && bun run preflight && bun run dev:compose -- up -d --build && bun run dev:configure",
    "dev:configure": "bun run dev/configure-openmemory.ts",
    "dev:down": "bun run dev:compose -- down",
    "dev:restart": "bun run preflight && bun run dev:compose -- restart",
    "dev:logs": "bun run dev:compose -- logs -f --tail=50",
    "dev:ps": "bun run dev:compose -- ps -a",
    "dev:config": "bun run dev:compose -- config",
    "dev:fresh": "bun run dev:setup:clean && bun run dev:compose -- up -d --build && bun run dev:configure",
    "admin:extensions": "bun run packages/cli/src/main.ts extensions",
    "test:unit": "bun test packages/ channels/ core/ dev/",
    "test:integration": "bun test --filter integration",
    "test:contracts": "bun test --filter contract",
    "test:security": "bun test --filter security",
    "test:ui": "cd packages/ui && bunx playwright test",
    "test:ci": "bun run typecheck && bun test --exclude packages/ui/test/api/",
    "test:docker": "OPENPALM_RUN_DOCKER_STACK_TESTS=1 bun test ./test/docker/docker-stack.docker.ts",
    "test:install:smoke": "OPENPALM_RUN_DOCKER_STACK_TESTS=1 bun test ./test/install-e2e/happy-path.docker.ts",
    "test:install:core-health": "OPENPALM_RUN_DOCKER_STACK_TESTS=1 bun test ./test/install-e2e/core-health.docker.ts",
    "cli:dev": "bun run packages/cli/src/main.ts",
    "cli:build": "bun build packages/cli/src/main.ts --compile --outfile dist/openpalm",
    "cli:build:linux-x64": "bun build packages/cli/src/main.ts --compile --target=bun-linux-x64 --outfile dist/openpalm-linux-x64",
    "cli:build:linux-arm64": "bun build packages/cli/src/main.ts --compile --target=bun-linux-arm64 --outfile dist/openpalm-linux-arm64",
    "cli:build:darwin-x64": "bun build packages/cli/src/main.ts --compile --target=bun-darwin-x64 --outfile dist/openpalm-darwin-x64",
    "cli:build:darwin-arm64": "bun build packages/cli/src/main.ts --compile --target=bun-darwin-arm64 --outfile dist/openpalm-darwin-arm64",
    "cli:build:windows-x64": "bun build packages/cli/src/main.ts --compile --target=bun-windows-x64 --outfile dist/openpalm-windows-x64.exe",
    "test:workflows": "./dev/test-workflows.sh",
    "ver": "bun run dev/version.ts",
    "ver:status": "bun run dev/version.ts status",
    "ver:bump": "bun run dev/version.ts bump",
    "ver:release": "bun run dev/version.ts release"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
